  "vulnerabilities": [
    {
      "cve": "CVE-2019-0222",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Apache ActiveMQ. Eine unsachgemäße Behandlung von MQTT-Frames kann dazu führen, dass die Out of Memory Exception nicht mehr funktioniert. Ein Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
