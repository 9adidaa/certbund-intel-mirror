  "vulnerabilities": [
    {
      "cve": "CVE-2019-15845",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Ruby. Diese besteht aufgrund einer unsachgemäßen Behandlung von Pfadmustern in den Methoden File.fnmatch und File.fnmatch?. Ein Angreifer kann diese Schwachstelle ausnutzen, um Sicherheitsmechanismen zu umgehen."
        }
      ],
