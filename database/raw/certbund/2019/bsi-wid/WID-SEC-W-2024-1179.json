  "vulnerabilities": [
    {
      "cve": "CVE-2019-19965",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle im Linux Kernel. Diese besteht aufgrund einer NULL Pointer Dereferenzierung in drivers/scsi/libsas/sas_discover.c, die mit einer PHY-Down-Race-Condition zusammenhängt. Ein Angreifer kann das ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
