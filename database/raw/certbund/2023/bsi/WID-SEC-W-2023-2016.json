    {
      "cve": "CVE-2022-4608",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Hitachi Energy RTU500. Dieser Fehler ist auf einen Stapelüberlauf zurückzuführen, der zu einem unerwarteten Neustart führt. Ein entfernter Angreifer kann diese Schwachstelle ausnutzen, um einen Denial-of-Service-Zustand zu verursachen."
        }
      ],
      "release_date": "2023-08-08T22:00:00.000+00:00",
      "title": "CVE-2022-4608"
    },
    {
      "cve": "CVE-2022-2502",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Hitachi Energy RTU500. Dieser Fehler besteht aufgrund einer fehlenden Validierung der Eingabedaten, was zu einem Überlauf eines internen Puffers führen kann. Ein entfernter Angreifer kann diese Schwachstelle ausnutzen, um einen Denial-of-Service-Zustand zu verursachen."
        }
      ],
      "release_date": "2023-08-08T22:00:00.000+00:00",
      "title": "CVE-2022-2502"
    }
