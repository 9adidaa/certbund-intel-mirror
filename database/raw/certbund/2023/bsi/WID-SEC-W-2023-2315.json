  "vulnerabilities": [
    {
      "cve": "CVE-2023-28831",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Siemens SIMATIC S7. Das ANSI C OPC UA SDK enthält eine Integer-Überlauf-Schwachstelle, die dazu führen kann, dass die Anwendung während der Zertifikatsvalidierung in eine Endlosschleife gerät. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
      "release_date": "2023-09-12T22:00:00.000+00:00",
      "title": "CVE-2023-28831"
    }
  ]
