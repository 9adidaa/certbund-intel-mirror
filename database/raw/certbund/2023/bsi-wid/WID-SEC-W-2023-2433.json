  "vulnerabilities": [
    {
      "cve": "CVE-2023-31418",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Elasticsearch. Dieser Fehler besteht aufgrund einer unsachgemäßen Behandlung von eingehenden Anfragen auf der HTTP-Schicht, die den Knoten dazu zwingen kann, mit einem OutOfMemory-Fehler zu enden. Durch das Senden einer moderaten Anzahl von fehlerhaften HTTP-Anfragen kann ein entfernter, nicht authentifizierter Angreifer diese Schwachstelle ausnutzen, um einen Denial-of-Service-Zustand zu verursachen."
        }
      ],
      "release_date": "2023-09-24T22:00:00.000+00:00",
      "title": "CVE-2023-31418"
    }
  ]
