  "vulnerabilities": [
    {
      "cve": "CVE-2022-27488",
      "notes": [
        {
          "category": "description",
          "text": "In verschiedenen Fortinet Produkten existiert eine Cross-Site Request Forgery Schwachstelle bezüglich der \"HTTPd CLI console\". Ein Angreifer kann dies ausnutzen, um mittels manipulierter Links beliebige Kommandos auf dem CLI auszuführen. Zur erfolgreichen Ausnutzung muss ein angemeldeter Administrator einen manipulierten Link anklicken."
        }
      ],
      "release_date": "2023-12-12T23:00:00.000+00:00",
      "title": "CVE-2022-27488"
