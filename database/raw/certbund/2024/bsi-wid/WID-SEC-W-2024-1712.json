  "vulnerabilities": [
    {
      "cve": "CVE-2024-1724",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Canonical Snap, wenn AppArmor verwendet wird, um Sandbox-Berechtigungen zu erzwingen. Der Schreibzugriff auf den Pfad „$HOME/bin“ wird nicht korrekt eingeschränkt. Ein lokaler Angreifer kann dies ausnutzen, um die Snap-Sandbox-Beschränkung zu umgehen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T036470",
          "T000126"
        ]
      },
      "release_date": "2024-07-25T22:00:00.000+00:00",
      "title": "CVE-2024-1724"
    },
    {
      "cve": "CVE-2024-29068",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Canonical Snap. Beim Extrahieren eines Snap Containers werden Dateitypen nicht ordnungsgemäß geprüft. Ein entfernter, anonymer Angreifer kann einen speziell gestalteten Snap Container bereitstellen, um damit Dateiinhalte zu lesen und um einen Denial of Service Zustand herbeizuführen. Zur Ausnutzung muss ein lokaler Benutzer mit bestimmten Berechtigungen den vom Angreifer bereitgestellten Snap Container installieren."
        }
      ],
      "product_status": {
        "known_affected": [
          "T036470",
          "T000126"
        ]
      },
      "release_date": "2024-07-25T22:00:00.000+00:00",
      "title": "CVE-2024-29068"
    },
    {
      "cve": "CVE-2024-29069",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Canonical Snap. Beim Entpacken eines Snap-Images wird das Ziel symbolischer Links nicht korrekt überprüft. Ein entfernter, anonymer Angreifer kann einen speziell gestalteten Snap Container bereitstellen, um damit Dateiinhalte zu lesen. Zur Ausnutzung muss ein lokaler Benutzer mit bestimmten Berechtigungen den vom Angreifer bereitgestellten Snap Container installieren."
        }
      ],
      "product_status": {
        "known_affected": [
          "T036470",
