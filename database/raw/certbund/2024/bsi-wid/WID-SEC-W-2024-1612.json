  "vulnerabilities": [
    {
      "cve": "CVE-2024-32945",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Mattermost Mobile Apps aufgrund eines unzureichenden Schutzes gegen den Missbrauch des global freigegebenen MathJax-Status, der es ermöglicht, den Inhalt eines LateX-Beitrags zu ändern. Durch das Erstellen eines weiteren Beitrags mit spezifischen Makrodefinitionen kann ein entfernter, authentifizierter Angreifer diese Schwachstelle ausnutzen, um Beiträge zu manipulieren. Eine erfolgreiche Ausnutzung erfordert eine Benutzerinteraktion."
        }
      ],
      "release_date": "2024-07-15T22:00:00.000+00:00",
      "title": "CVE-2024-32945"
    },
    {
      "cve": "CVE-2024-39767",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Mattermost Mobile Apps aufgrund einer unsachgemäßen Authentifizierung, die es ermöglicht, Push-Benachrichtigungen mit manipulierten URLs zu versenden. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um Sicherheitsmaßnahmen zu umgehen oder Phishing-Angriffe durchzuführen. Eine erfolgreiche Ausnutzung erfordert eine Benutzerinteraktion."
        }
      ],
      "release_date": "2024-07-15T22:00:00.000+00:00",
      "title": "CVE-2024-39767"
    }
  ]
