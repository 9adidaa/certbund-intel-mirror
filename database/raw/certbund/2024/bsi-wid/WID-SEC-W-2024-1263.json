  "vulnerabilities": [
    {
      "cve": "CVE-2024-22261",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Harbor, die auf eine unzureichende Validierung und Bereinigung von Benutzereingaben zurückzuführen ist, was zu SQL-Injection führt. Ein entfernter, authentifizierter Angreifer kann diese Schwachstelle ausnutzen, um vertrauliche Informationen offenzulegen."
        }
      ],
      "release_date": "2024-05-30T22:00:00.000+00:00",
      "title": "CVE-2024-22261"
    },
    {
      "cve": "CVE-2024-22244",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Harbor, die auf eine unzureichende URL-Validierung während der OIDC-Authentifizierung zurückzuführen ist und einen Open-Redirect-Angriff ermöglicht. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, indem er bösartige URLs erstellt, die Benutzer auf Phishing- oder bösartige Websites umleiten."
        }
      ],
      "release_date": "2024-05-30T22:00:00.000+00:00",
      "title": "CVE-2024-22244"
    }
