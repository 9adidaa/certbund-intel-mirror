  "vulnerabilities": [
    {
      "cve": "CVE-2024-45398",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Contao. Dieser Fehler existiert aufgrund eines unbeschränkten Dateiuploads, der es einem Backend-Benutzer mit Zugriff auf den Dateimanager erlaubt, bösartige Dateien hochzuladen und auf dem Server auszuführen. Ein entfernter authentifizierter Angreifer kann diese Schwachstelle ausnutzen, um beliebige Befehle auszuführen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T037668",
          "T037669",
          "T037667"
        ]
      },
      "release_date": "2024-09-16T22:00:00.000+00:00",
      "title": "CVE-2024-45398"
    },
    {
      "cve": "CVE-2024-45604",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Contao. Dieser Fehler existiert wegen eines Verzeichnistraversal-Problems, das es erlaubt, Dateien außerhalb ihrer Dateiverbindungen und der Stammdokumente im FileSelector-Widget aufzulisten. Ein entfernter, authentifizierter Angreifer kann diese Schwachstelle ausnutzen, um vertrauliche Informationen offenzulegen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T037667"
        ]
      },
      "release_date": "2024-09-16T22:00:00.000+00:00",
      "title": "CVE-2024-45604"
    },
    {
      "cve": "CVE-2024-45612",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Contao. Dieser Fehler existiert wegen eines Tag-Injection-Problems in kanonischen URLs, die ersetzt werden, wenn die Seite gerendert wird. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um vertrauliche Informationen offenzulegen."
        }
      ],
