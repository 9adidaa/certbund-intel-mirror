  "vulnerabilities": [
    {
      "cve": "CVE-2024-13278",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Drupal. Das Diff Modul prüft den Revisionszugriff nicht ausreichend, bevor es einen Diff-Bericht für Knoten oder allgemeine Entitäten, die Diff unterstützen, erstellt. Ein entfernter, authentisierter Angreifer, der über bestimmte Berechtigungen verfügen muss, kann diese Schwachstelle ausnutzen, um Informationen offenzulegen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T037965",
          "T037964"
        ]
      },
      "release_date": "2024-10-03T22:00:00.000+00:00",
      "title": "CVE-2024-13278"
    },
    {
      "cve": "CVE-2024-13279",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Drupal. Das Two-factor Authentication (TFA) Modul migriert Sitzungen nicht ausreichend, bevor es zur Eingabe eines Tokens für den zweiten Faktor auffordert. Unter speziellen Voraussetzungen kann ein entfernter, anonymer Angreifer diese Schwachstelle ausnutzen, um Zugriffsbeschränkungen zu umgehen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T037966"
        ]
      },
      "release_date": "2024-10-03T22:00:00.000+00:00",
      "title": "CVE-2024-13279"
    },
    {
      "cve": "CVE-2024-13280",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Drupal. Das Persistent Login Modul prüft den Deaktivierungsstatus eines Benutzers bei der Validierung von Cookies nicht ausreichend. Ein entfernter, authentisierter Angreifer, der im Besitz eines nicht abgelaufenes Cookie von einer vorherigen erfolgreichen Anmeldung sein muss, kann diese Schwachstelle ausnutzen, um Informationen offenzulegen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T037967",
          "T037968"
        ]
      },
      "release_date": "2024-10-03T22:00:00.000+00:00",
      "title": "CVE-2024-13280"
    }
