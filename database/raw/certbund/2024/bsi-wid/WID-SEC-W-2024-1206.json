  "vulnerabilities": [
    {
      "cve": "CVE-2024-22273",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in VMware ESXi, VMware Workstation, VMware Fusion und VMware Cloud Foundation. Dieser Fehler besteht in den Storage-Controllern aufgrund eines Out-of-Bounds Read/Write. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um beliebigen Code auszuführen oder einen Denial-of-Service-Zustand auf dem Hypervisor zu verursachen."
        }
      ],
      "release_date": "2024-05-21T22:00:00.000+00:00",
      "title": "CVE-2024-22273"
    },
