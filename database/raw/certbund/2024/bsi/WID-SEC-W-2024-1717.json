  "vulnerabilities": [
    {
      "cve": "CVE-2024-41817",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in ImageMagick. Dieser Fehler betrifft die Komponente AppImage aufgrund einer unsachgemäßen Behandlung von Umgebungsvariablen, die einen leeren Pfad enthalten können. Dies kann ImageMagick dazu veranlassen, das aktuelle Arbeitsverzeichnis nach Konfigurationsdateien oder gemeinsam genutzten Bibliotheken zu durchsuchen. Ein Angreifer mit Zugriff auf diese Verzeichnisse kann diese Schwachstelle zur Ausführung von beliebigem Code ausnutzen. Eine erfolgreiche Ausnutzung erfordert Benutzerinteraktion."
        }
      ],
      "release_date": "2024-07-28T22:00:00.000+00:00",
      "title": "CVE-2024-41817"
    }
  ]
