  "vulnerabilities": [
    {
      "cve": "CVE-2024-5491",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Citrix Systems ADC und Gateway, die mit SNMP konfiguriert sind. Diese Schwachstelle besteht aufgrund einer unsachgemäßen Einschränkung von Operationen innerhalb der Grenzen eines Speicherpuffers. Ein Angreifer aus einem angrenzenden Netzwerk kann diese Schwachstelle ausnutzen, um einen Denial-of-Service-Zustand zu erzeugen und vertrauliche Informationen offenzulegen."
        }
      ],
      "release_date": "2024-07-09T22:00:00.000+00:00",
      "title": "CVE-2024-5491"
    },
    {
      "cve": "CVE-2024-5492",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Citrix Systems ADC und Gateway. Dieser Fehler besteht aufgrund einer offenen Umleitung, die es Benutzern ermöglicht, auf beliebige Websites umgeleitet zu werden. Ein entfernter Angreifer kann diese Schwachstelle ausnutzen, um Sicherheitsmaßnahmen zu umgehen und so möglicherweise Phishing-Angriffe durchzuführen. Eine erfolgreiche Ausnutzung erfordert eine Benutzerinteraktion."
        }
      ],
      "release_date": "2024-07-09T22:00:00.000+00:00",
      "title": "CVE-2024-5492"
    }
  ]
