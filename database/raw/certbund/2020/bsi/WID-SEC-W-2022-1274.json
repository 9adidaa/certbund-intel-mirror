  "vulnerabilities": [
    {
      "cve": "CVE-2020-27821",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in QEMU. Die Speicherverwaltungs-API enthält einen Out-of-Bound-Schreibzugriff auf die MSI-X-Tabelle, wenn MMIO-Vorgänge ausgeführt werden. Ein Angreifer innerhalb einer Gast-VM kann dies ausnutzen, um den QEMU-Hostprozess zum Absturz zu bringen."
        }
      ],
