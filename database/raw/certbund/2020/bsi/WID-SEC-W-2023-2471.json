  "vulnerabilities": [
    {
      "cve": "CVE-2020-9494",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Apache Traffic Server aufgrund von Fehlern im Umgang mit bestimmten HTTP2-Header-Frames. Ein entfernter, anonymer Angreifer kann diese Schwachstelle durch das Senden von speziellen HTTP2-Paketen ausnutzen, um einen Denial of Service Zustand zu verursachen, da eine Allokation von Speicher stattfindet."
        }
      ],
