  "vulnerabilities": [
    {
      "cve": "CVE-2022-22934",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in SaltStack Salt. \"Pillar\"-Daten werden nicht signiert, sodass hier beliebige Daten eingesetzt werden können, da keine Überprüfung stattfindet. Ein anonymer Angreifer im gleichen Netzbereich kann diese Schwachstelle ausnutzen, um Dateien zu manipulieren."
        }
      ],
      "product_status": {
        "known_affected": [
          "T002207",
          "T012167"
        ]
      },
      "release_date": "2022-03-29T22:00:00.000+00:00",
      "title": "CVE-2022-22934"
    },
    {
      "cve": "CVE-2022-22935",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in SaltStack Salt. Mithilfe einer Man-in-the-Middle-Position kann ein Minion zum Absturz gebracht werden. Ein anonymer Angreifer im gleichen Netzbereich kann diese Schwachstelle ausnutzen, um einen Denial of Service Zustand herbeizuführen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T002207",
          "T012167"
        ]
      },
      "release_date": "2022-03-29T22:00:00.000+00:00",
      "title": "CVE-2022-22935"
    },
    {
      "cve": "CVE-2022-22936",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in SaltStack Salt. Replay-Angriffe können gegen Minions und den Server ausgeführt werden, um Jobs erneut auszuführen. In Folge kann die Kontrolle über Minions übernommen werden. Ein entfernter Angreifer im gleichen Netzbereich kann diese Schwachstelle ausnutzen, um seine Privilegien zu erhöhen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T002207",
          "T012167"
        ]
      },
      "release_date": "2022-03-29T22:00:00.000+00:00",
      "title": "CVE-2022-22936"
    },
    {
      "cve": "CVE-2022-22941",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in SaltStack Salt. In einer bestimmten Konfiguration werden nicht-valide Minions als valide für eine Konfiguration erkannt. Dadurch können diese dann neu konfiguriert werden. Ein entfernter, authentisierter Angreifer kann diese Schwachstelle ausnutzen, um beliebigen Programmcode auszuführen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T002207",
          "T012167"
        ]
      },
      "release_date": "2022-03-29T22:00:00.000+00:00",
      "title": "CVE-2022-22941"
    }
  ]
