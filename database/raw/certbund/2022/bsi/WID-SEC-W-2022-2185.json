  "vulnerabilities": [
    {
      "cve": "CVE-2022-4172",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in QEMU. Diese ist auf Integer-und Puffer-überlaufe in den Funktionen \"read_erst_record()\" sowie \"write_erst_record()\" zurückzuführen. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Service Zustand herbeizuführen."
        }
      ],
