  "vulnerabilities": [
    {
      "cve": "CVE-2023-1514",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Hitachi Energy RTU500. Das Problem besteht in der Komponente \"Scripting-Schnittstelle\". Der Client validiert die Parameter des vorgelegten Zertifikats nicht ordnungsgemäß, so dass nicht überprüft werden kann, ob der Remote-Dienst vertrauenswürdig ist. Ein Angreifer kann diese Schwachstelle ausnutzen, um die Identität des Dienstes fälschen und in der Folge über die RTU500 Scripting-Schnittstelle initiierte Nachrichten abfangen."
        }
      ],
      "release_date": "2023-12-19T23:00:00.000+00:00",
      "title": "CVE-2023-1514"
    },
    {
      "cve": "CVE-2023-6711",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Hitachi Energy RTU500. Speziell gestaltete Nachrichten werden nicht sachgemäß validiert, was einen Pufferüberlauf und einen Neustart des Gerätes verursachen kann. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Servie zu verursachen."
        }
      ],
      "release_date": "2023-12-19T23:00:00.000+00:00",
      "title": "CVE-2023-6711"
    }
  ]
