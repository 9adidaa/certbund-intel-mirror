    {
      "cve": "CVE-2023-1587",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Avast Antivirus und AVG Anti-Virus. In der RPC-Schnittstelle besteht ein Problem mit einer NULL-Zeiger-Dereferenzierung. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
      "release_date": "2023-04-19T22:00:00.000+00:00",
      "title": "CVE-2023-1587"
    },
    {
      "cve": "CVE-2023-1586",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Avast Antivirus und AVG Anti-Virus. Ein Time-of-check/Time-of-use (TOCTOU)-Problem im Wiederherstellungsprozess führt zum willkürlichen erstellen von Dateien. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um Dateien zu manipulieren und einen Denial of Service zu verursachen."
        }
      ],
      "release_date": "2023-04-19T22:00:00.000+00:00",
      "title": "CVE-2023-1586"
    },
    {
      "cve": "CVE-2023-1585",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Avast Antivirus und AVG Anti-Virus. Ein Time-of-check/Time-of-use (TOCTOU)-Problem im Quarantäneprozess führt zum willkürlichen Löschen von Dateien/Verzeichnissen. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um Dateien zu manipulieren und einen Denial of Service zu verursachen."
        }
      ],
      "release_date": "2023-04-19T22:00:00.000+00:00",
      "title": "CVE-2023-1585"
    }
