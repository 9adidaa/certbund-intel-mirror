  "vulnerabilities": [
    {
      "cve": "CVE-2024-10403",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Broadcom Fabric OS. Dieser Fehler existiert wegen der unsachgemäßen Behandlung von SFTP/FTP-Server-Anmeldeinformationen. Durch den Zugriff auf Core-Dumps, die vom Weblinker-Daemon generiert werden, kann ein Angreifer aus einem benachbarten Netzwerk diese Schwachstelle ausnutzen, um die SFTP/FTP-Anmeldeinformationen zu erfassen, die während Firmware-Download-Vorgängen verwendet werden. Zur erfolgreichen Ausnutzung ist eine Benutzerinteraktion erforderlich."
        }
      ],
      "product_status": {
        "known_affected": [
          "T038916",
          "T038915",
          "T038917",
          "T038914",
          "T038913",
          "T005119"
        ]
      },
      "release_date": "2024-11-11T23:00:00.000+00:00",
      "title": "CVE-2024-10403"
    },
    {
      "cve": "CVE-2024-7516",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Broadcom Fabric OS. Dieser Fehler existiert wegen unsachgemäßer Eingabevalidierung im portcfg-Befehl auf IP-Erweiterungsplattformen, was Befehlsinjektion ermöglicht. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um seine Privilegien zu erhöhen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T038916",
          "T038915",
          "T038914",
          "T038913",
          "T005119"
        ]
      },
      "release_date": "2024-11-11T23:00:00.000+00:00",
      "title": "CVE-2024-7516"
    },
    {
      "cve": "CVE-2024-7517",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Broadcom Fabric OS. Dieser Fehler existiert wegen des Fehlens von StrictHostKeyChecking in der SSH-Konfigurationskomponente, was das Hijacking von Remote-Service-Sitzungen ermöglicht. Durch das Fälschen eines SSH-Schlüssels und das Abfangen von Verbindungen während bestimmter Remote-Vorgänge, die von einem Switch-Administrator initiiert werden, kann ein Angreifer aus einem angrenzenden Netzwerk diese Schwachstelle ausnutzen, um Sicherheitsmaßnahmen zu umgehen und unbefugten Zugriff zu erhalten. Zur erfolgreichen Ausnutzung ist eine Benutzerinteraktion erforderlich."
        }
      ],
      "product_status": {
        "known_affected": [
          "T038916",
          "T038915",
          "T038917",
          "T038914",
          "T038913",
          "T005119"
        ]
      },
      "release_date": "2024-11-11T23:00:00.000+00:00",
      "title": "CVE-2024-7517"
    }
  ]
