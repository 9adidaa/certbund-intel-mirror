  "vulnerabilities": [
    {
      "cve": "CVE-2024-4879",
      "notes": [
        {
          "category": "description",
          "text": "Es bestehen mehrere Schwachstellen in der ServiceNow Now Platform. Diese Fehler bestehen im GlideExpression Script, den UI Macros und in der SecurelyAccess API aufgrund einer unsachgemäßen Eingabevalidierung. Ein entfernter, anonymer oder authentisierter Angreifer kann diese Schwachstellen ausnutzen, um beliebigen Code mit den Rechten der Now Platform auszuführen oder um Zugriff auf sensible Dateien auf dem Webanwendungsserver zu erhalten."
        }
      ],
      "release_date": "2024-07-10T22:00:00.000+00:00",
      "title": "CVE-2024-4879"
    },
