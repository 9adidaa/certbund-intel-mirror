  "vulnerabilities": [
    {
      "cve": "CVE-2024-39929",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in Exim aufgrund eines fehlerhaften Parsings von mehrzeiligen RFC 2231 Header Dateinamen. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um den $mime_filename-Erweiterungsblockierschutz zu umgehen und so Sicherheitsmaßnahmen zu umgehen."
        }
      ],
