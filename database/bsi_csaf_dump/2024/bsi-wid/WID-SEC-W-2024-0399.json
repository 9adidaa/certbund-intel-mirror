  "vulnerabilities": [
    {
      "cve": "CVE-2024-0353",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in ESET Endpoint Security, ESET Server Security und ESET NOD32 Antivirus. Dieser Fehler besteht in der Handhabung von Datei-Operationen, die von der Funktion Echtzeit-Dateisystemschutz ausgeführt werden, aufgrund einer unsachgemäßen Zugriffsverwaltung, die es ermöglicht, beliebige Dateien als NT AUTHORITY\\SYSTEM zu löschen. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um seine Privilegien zu erweitern."
        }
      ],
      "release_date": "2024-02-14T23:00:00.000+00:00",
      "title": "CVE-2024-0353"
    }
  ]
