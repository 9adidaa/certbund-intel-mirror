  "vulnerabilities": [
    {
      "cve": "CVE-2024-35198",
      "notes": [
        {
          "category": "description",
          "text": "Es besteht eine Schwachstelle in PyTorch TorchServer aufgrund einer unsachgemäßen URL-Validierung, die nicht verhindert, dass ein Modell in den Modellspeicher heruntergeladen wird. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um die allowed_urls-Sicherheitsprüfung zu umgehen und so Sicherheitsmaßnahmen zu umgehen."
        }
      ],
      "release_date": "2024-07-22T22:00:00.000+00:00",
      "title": "CVE-2024-35198"
    },
    {
      "cve": "CVE-2024-35199",
      "notes": [
        {
          "category": "description",
          "text": "In PyTorch TorchServer besteht eine Schwachstelle aufgrund einer gRPC-Port-Exposition, die die Ports 7070 und 7071 nicht standardmäßig an localhost bindet. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um nicht spezifizierte Auswirkungen zu verursachen."
        }
      ],
      "release_date": "2024-07-22T22:00:00.000+00:00",
      "title": "CVE-2024-35199"
    }
  ]
