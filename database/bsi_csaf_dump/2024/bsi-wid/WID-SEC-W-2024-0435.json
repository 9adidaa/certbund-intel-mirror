  "vulnerabilities": [
    {
      "cve": "CVE-2024-21678",
      "notes": [
        {
          "category": "description",
          "text": "In Atlassian Confluence existiert eine Cross-Site Scripting Schwachstelle. HTML und Script-Eingaben werden nicht ordnungsgemäß überprüft, bevor sie an den Benutzer zurückgegeben werden. Ein entfernter, anonymer Angreifer kann durch Ausnutzung dieser Schwachstelle beliebigen HTML- und Script-Code durch den Browser des Benutzers im Kontext der betroffenen Seite ausführen. Zur Ausnutzung dieser Schwachstelle ist eine Benutzerinteraktion erforderlich."
        }
      ],
      "release_date": "2024-02-20T23:00:00.000+00:00",
      "title": "CVE-2024-21678"
    }
  ]
