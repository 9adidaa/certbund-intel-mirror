  "vulnerabilities": [
    {
      "cve": "CVE-2019-17540",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in ImageMagick, welche auf einem möglichen heap-basierten Puffer-Überlauf in \"ReadPSInfo in coders/ps.c.\" basiert. Ein lokaler Angreifer kann diese Schwachstelle ausnutzen, um beliebigen Programmcode auszuführen oder einen Denial-of-Service herzustellen."
        }
      ],
      "product_status": {
        "known_affected": [
