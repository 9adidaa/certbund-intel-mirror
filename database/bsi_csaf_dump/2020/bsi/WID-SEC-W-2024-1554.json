  "vulnerabilities": [
    {
      "cve": "CVE-2020-10134",
      "notes": [
        {
          "category": "description",
          "text": "Es gibt eine Schwachstelle in der Bluetooth-Spezifikation bezüglich der Betriebsmodi Bluetooth Low Energy (BLE) und Basic Rate / Enhanced Data Rate (BR/EDR). Der Kopplungsprozess (\"pairing\") ermöglicht es einem Angreifer innerhalb der Funkreichweite, die in der Kommunikation übertragenen Anmeldeinformationen abzufangen. Der Angreifer kann dann beliebige Bluetooth-Operationen an den Geräten durchführen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T016593",
          "T002207",
          "67646",
          "T000126"
        ]
      },
      "release_date": "2020-05-18T22:00:00.000+00:00",
      "title": "CVE-2020-10134"
    },
    {
      "cve": "CVE-2020-10135",
      "notes": [
        {
          "category": "description",
          "text": "Es gibt eine Schwachstelle in der Bluetooth-Spezifikation. In der Betriebsart Bluetooth Classic (Bluetooth BR/EDR) kann die \"long term pairing key\" Authentisierung umgangen werden. Ein Angreifer in Funkreichweite kann dies ausnutzen, um sich als ein beliebiges Bluetooth-Gerät auszugeben. Dieser Angriff wurde \"Bluetooth Impersonation AttackS (BIAS)\" genannt."
        }
      ],
      "product_status": {
        "known_affected": [
          "T016593",
          "T002207",
          "67646",
          "T000126"
        ]
      },
