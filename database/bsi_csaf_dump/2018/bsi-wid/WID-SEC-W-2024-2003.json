  "vulnerabilities": [
    {
      "cve": "CVE-2018-15746",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in QEMU bezüglich der Implementierung des \"Seccomp Sandboxing\". QEMU Threads werden nicht ordnungsgemäß in der Sandbox gebunden. Ein Angreifer in einem Gastsystem kann dies für einen Denial of Service Angriff ausnutzen."
        }
      ],
