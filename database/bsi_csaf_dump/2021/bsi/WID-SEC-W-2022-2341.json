  "vulnerabilities": [
    {
      "cve": "CVE-2021-1074",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle im NVIDIA Windows GPU Display-Treiber für Windows. Diese befindet sich im Installationsprogramm und ermöglicht es einem lokalen Angreifer eine Anwendungsressource durch bösartige Dateien zu ersetzen. In der Folge kann er seine Privilegien erweitern, Code ausführen, Informationen offenlegen oder einen Denial of Service verursachen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T006498",
          "T006520",
          "2951",
          "T000126",
          "398363",
          "T012167",
          "T016002"
        ]
      },
      "release_date": "2021-04-21T22:00:00.000+00:00",
      "title": "CVE-2021-1074"
    },
    {
      "cve": "CVE-2021-1075",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle im NVIDIA Windows GPU Display-Treiber für Windows im Handler für \"DxgkDdiEscape\" in der Kernel-Modus-Schicht (nvlddmkm.sys). Hier wird ein Zeiger, der einen nicht mehr gültigen Speicherplatz enthält, dereferenziert. Ein lokaler Angreifer kann das ausnutzen, um seine Rechte zu erweitern, Code auszuführen und einen Denial of Service zu verursachen."
        }
      ],
      "product_status": {
        "known_affected": [
          "2951",
          "T000126",
          "398363",
          "T012167",
          "T016002"
        ]
      },
      "release_date": "2021-04-21T22:00:00.000+00:00",
      "title": "CVE-2021-1075"
    },
    {
      "cve": "CVE-2021-1076",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle im NVIDIA Windows GPU Display-Treiber für Windows und Linux in der Kernel-Mode-Schicht (nvlddmkm.sys oder nvidia.ko). Ein lokaler Angreifer kann eine unsachgemäße Zugriffskontrolle ausnutzen, um einen Denial-of-Service zu verursachen, Informationen offenzulegen oder Daten zu manipulieren."
        }
      ],
      "product_status": {
