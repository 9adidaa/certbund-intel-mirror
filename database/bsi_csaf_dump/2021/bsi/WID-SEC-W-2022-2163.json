  "vulnerabilities": [
    {
      "cve": "CVE-2021-39212",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in ImageMagick. Die Ursache ist ein Fehler bei der Konfiguration der ImageMagick-Sicherheitsrichtlinie. Ein entfernter anonymer Angreifer kann diese Schwachstelle durch das Senden einer speziell gestalteten Anfrage ausnutzen, um unberechtigt Postscript-Dateien zu lesen und zu schreiben."
        }
      ],
