  "vulnerabilities": [
    {
      "cve": "CVE-2021-3930",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in QEMU. Die Schwachstelle besteht in der SCSI-Geräte Emulation und ist auf einen off-by-one-error zurückzuführen. Ein lokaler Angreifer der als Gast angemeldet ist, kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
