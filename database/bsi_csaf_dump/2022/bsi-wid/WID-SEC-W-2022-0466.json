  "vulnerabilities": [
    {
      "cve": "CVE-2021-44141",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Samba. Benutzer mit Schreibzugriff auf eine SMB1- oder NFS-Freigabe können beliebige Symlinks erzeugen, die auf Verzeichnisse außerhalb des freigegebenen Servers zeigen. Ein authentifizierter Angreifer kann dies ausnutzen, um das Vorhandensein von Dateien oder Verzeichnissen auf dem Server offenzulegen."
        }
      ],
      "product_status": {
        "known_affected": [
          "T015519",
          "T015518",
          "T015516",
