  "vulnerabilities": [
    {
      "cve": "CVE-2022-3266",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Mozilla Thunderbird. Hierbei handelt es sich um ein Out-of-Bounds-Read Problem bei der Dekodierung von H264-Videos. Ein entfernter, anonymer Angreifer kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen. Zur erfolgreichen Ausnutzung ist eine Benutzeraktion erforderlich."
        }
      ],
      "product_status": {
