  "vulnerabilities": [
    {
      "cve": "CVE-2022-1974",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle im Linux Kernel. In /net/nfc/core.c bestehen use-after-free Probleme. Indem er ein nfc-Gerät aus dem User-Space simuliert, kann ein Angreifer den Linux Kernel zum Absturz bringen."
        }
      ],
      "product_status": {
