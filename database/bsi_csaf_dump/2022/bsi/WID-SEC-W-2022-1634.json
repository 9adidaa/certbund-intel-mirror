  "vulnerabilities": [
    {
      "cve": "CVE-2022-2928",
      "notes": [
        {
          "category": "description",
          "text": "Es existiert eine Schwachstelle in Internet Systems Consortium DHCP. Diese besteht aufgrund einer unsachgemäßen Behandlung von Lease-Anfragen durch den DHCP-Server. Ein Angreifer aus dem angrenzenden Netzwerk kann diese Schwachstelle ausnutzen, um einen Denial of Service zu verursachen."
        }
      ],
